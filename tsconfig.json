{
    "compilerOptions": {
      "strict": true,
      "outDir": "./dist",
      "lib": ["es6", "dom", "dom.iterable"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "declaration": true,
      "inlineSources": true,
      "inlineSourceMap": true,
      "baseUrl": "./src",
      "types": ["node", "jest"],
      "typeRoots": ["./src/types", "node_modules/@types"]
    },
    "include": ["./src/**/*"]
  }

